  "input": {
    "cross": [
      {
        "git": {
          "url": "https://github.com/BHKLAB-Pachyderm/ctrpv2RecalculateFromRaw.git",
          "name": "",
          "branch": "master"
        }
      },
      {
        "pfs": {
          "repo": "CTRPv2RawSensitivity",
          "name": "input",
          "glob": "/slices/*"
        }
      } 
    ]
  }
}
