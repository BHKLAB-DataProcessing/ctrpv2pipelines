{
  "pipeline": {
    "name": "calculatectrpv2RAW"
  },
  "transform": {
    "image": "bhklab/pharmacogx:v3",
    "cmd": [
      "Rscript", 
      "/pfs/ctrpv2RecalculateFromRaw/recalculateSlice.R"]
    },
  "parallelism_spec":{
    "coefficient": 4
  },
  "resource_requests": {
